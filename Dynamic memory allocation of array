#include<iostream>
using namespace std;

void update(int arr[],int n)
{
    cout<<endl;
    cout<<endl;
    cout<<"Enter array again : ";
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
}

int main()
{
    int n;
    cout<<"Enter the size of array : ";
    cin>>n;
    int *arr=new int[n];

    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<endl<<"Before Update : ";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    update(arr,n);

    cout<<endl<<"After Update : ";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }

    return 0;
}
